              .post-body
                %h4
                  %strong= t('labels.course.description')

                %dl.detail
                  %dt.status
                    %i.fa.fa-link
                    = t('labels.course.site')
                    \:
                  %dd
                    %a{href: @course.site, target: '_blank'}= @course.site

                  %dt.status
                    %i.fa.fa-language
                    = t('labels.course.language')
                    \:
                  %dd
                    %span= @course.language

                  %dt.area
                    %i.fa.fa-suitcase
                    = t('labels.course.subject_id')
                    \:
                  %dd
                    %span= @course.subject.name

                  - if @course.direction
                    %dt.area
                      %i.fa.fa-tags
                      = t('labels.course.direction_id')
                      \:
                    %dd
                      %span= @course.direction.try(:name)

                  %dt.area
                    %i.fa.fa-clock-o
                    = t('labels.course.duration')
                    \:
                  %dd
                    %span= @course.duration

                  - if @course.start_date
                    %dt.area
                      %i.fa.fa-play
                      = t('labels.course.start_date')
                      \:
                    %dd
                      %span= @course.start_date.strftime('%d-%m-%Y')

                  - if @course.end_date
                    %dt.area
                      %i.fa.fa-stop
                      = t('labels.course.end_date')
                      \:
                    %dd
                      %span= @course.end_date.strftime('%d-%m-%Y')

                %p= @course.description
